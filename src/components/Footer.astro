---
import { Image } from 'astro:assets';

import logoWhite from '../assets/img/logo-se-w.svg';
import logoBlack from '../assets/img/logo-se-b.svg'
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<footer class="w-full">
    <div class="flex flex-row justify-end items-end mx-auto w-full max-w-[1440px] py-4 px-5 gap-x-4">
        <p class="copyright text-stone-900 dark:text-stone-50 text-sm leading-[100%] transition-all duration-300">
            {t('footer.copyright')}<a href="https://astro.build/" target="_blank" class="hover:text-stone-500 transition-all duration-150">Astro</a>.
        </p>
        <div class="brand relative w-[60px] lg:w-[120px] h-[47px] lg:h-[94px]">
            <span id="logo-light" class="logo-light opacity-0 transition-all duration-300 w-full h-full">
                <Image src={logoWhite} alt="Logo de Sam Esteban" class="absolute top-0 left-0 w-full h-full object-contain object-center" />
            </span>
            <span id="logo-dark" class="logo-dark opacity-0 transition-all duration-300 w-full h-full">
                <Image src={logoBlack} alt="Logo de Sam Esteban" class="absolute top-0 left-0 w-full h-full object-contain object-center" />
            </span>
        </div>
    </div>
</footer>